<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="5" author="ramazan.karagoz">
        <createTable tableName="stock">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="pk_stock" nullable="false"/>
            </column>

            <column name="book_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column defaultValueBoolean="true" name="available" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column defaultValue="0" name="quantity" type="integer">
                <constraints nullable="false"/>
            </column>


            <column name="created_by" type="varchar(64)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(64)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column defaultValueBoolean="false" name="deleted" type="boolean">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="book_id"
                                 baseTableName="stock"
                                 constraintName="fk_stock__book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"/>

        <createIndex indexName="ux_stock__book_id"
                     unique="true"
                     tableName="stock">
            <column name="book_id"/>
        </createIndex>

        <createIndex indexName="ix_stock__book" tableName="stock">
            <column name="book_id"/>
        </createIndex>

    </changeSet>



</databaseChangeLog>
